@page "/NotFound"
@model DotNetUniverse.Pages.NotFoundModel
@{
    ViewData["Title"] = "페이지를 찾을 수 없습니다";
    Response.StatusCode = 404;
}

<section class="py-5 bg-purple text-white">
    <div class="container py-5">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-1 fw-bold mb-3">
                    <i class="bi bi-emoji-frown me-3"></i>404
                </h1>
                <p class="lead opacity-90">
                    페이지를 찾을 수 없습니다
                </p>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="mb-5">
                    <i class="bi bi-search display-1 text-muted mb-4"></i>
                    <h2 class="fw-bold mb-4">요청하신 페이지를 찾을 수 없습니다</h2>
                    <p class="text-muted mb-4">
                        입력하신 주소가 정확한지 확인해 주세요.<br />
                        페이지가 이동되었거나 삭제되었을 수 있습니다.
                    </p>
                    @if (!string.IsNullOrEmpty(Model.RequestedPath))
                    {
                        <p class="text-muted small mb-4">
                            <code>@Model.RequestedPath</code>
                        </p>
                    }
                </div>

                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-5">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-house-fill me-2"></i>홈으로 이동
                    </a>
                    <a href="/history" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-archive me-2"></i>지난 행사 보기
                    </a>
                    <a href="/Search" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-search me-2"></i>검색하기
                    </a>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-lightbulb text-warning me-2"></i>찾고 계신 것이 있으신가요?
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <a href="/history" class="text-decoration-none">
                                    <div class="p-3 bg-light rounded hover-lift">
                                        <i class="bi bi-calendar-event text-purple fs-4 mb-2 d-block"></i>
                                        <span class="text-dark fw-bold">지난 행사</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/sponsorship/ko" class="text-decoration-none">
                                    <div class="p-3 bg-light rounded hover-lift">
                                        <i class="bi bi-heart-fill text-danger fs-4 mb-2 d-block"></i>
                                        <span class="text-dark fw-bold">후원 안내</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/About" class="text-decoration-none">
                                    <div class="p-3 bg-light rounded hover-lift">
                                        <i class="bi bi-info-circle text-primary fs-4 mb-2 d-block"></i>
                                        <span class="text-dark fw-bold">소개</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // 5초 후 자동으로 홈으로 이동 (선택적)
        // setTimeout(function() { window.location.href = '/'; }, 5000);
    </script>
}
