@page "/sitemap.xml"
@model DotNetUniverse.Pages.SitemapModel
@{
    Layout = null;
    Response.ContentType = "application/xml";
}<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    @foreach (var url in Model.Urls)
    {
    <url>
        <loc>@url.Loc</loc>
        <lastmod>@url.LastMod.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>@url.ChangeFreq</changefreq>
        <priority>@url.Priority.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture)</priority>
    </url>
    }
</urlset>
