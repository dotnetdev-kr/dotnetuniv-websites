<!-- 지난 강의 -->
@if (Model.PastStudies.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold mb-4">
                <i class="bi bi-collection-play text-danger me-2"></i>지난 강의
            </h2>
            <div class="row g-4">
                @foreach (var studyData in Model.PastStudies)
                {
                    var study = studyData.Study;
                    <div class="col-md-6 col-lg-4">
                        <a href="@studyData.Url" class="text-decoration-none">
                            <div class="card h-100 border-0 shadow-sm card-hover">
                                <div class="card-header bg-purple text-white py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">@study.Date.ToString("yyyy년 M월")</span>
                                        @if (study.Videos.Any())
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-play-circle me-1"></i>영상
                                            </span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body p-4">
                                    <h5 class="fw-bold mb-3">@study.Title.Replace("월간닷넷 ", "").Replace($"{study.Year}년 ", "").Replace($" - ", ": ")</h5>
                                    <p class="text-muted small mb-0">
                                        @study.Description?.Split('\n').Skip(2).FirstOrDefault()?.Substring(0, Math.Min(80, study.Description?.Split('\n').Skip(2).FirstOrDefault()?.Length ?? 0))...
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent border-0 p-4 pt-0">
                                    <span class="btn btn-outline-purple btn-sm w-100">
                                        <i class="bi bi-arrow-right me-1"></i>자세히 보기
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

