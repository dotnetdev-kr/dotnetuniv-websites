                    <div class="stat-icon mb-3">
                        <i class="bi bi-flag text-info fs-1"></i>
                    </div>
                    <div class="display-5 fw-bold text-info mb-2">@Model.Statistics.TotalConferences</div>
                    <div class="text-white-50 small">회 컨퍼런스</div>
