@page
@model IndexModel
@{
    ViewData["Title"] = "국내 최대 .NET 개발자 컨퍼런스";
    ViewData["OgDescription"] = ".NET Universe - AI 시대를 선도하는 국내 최대 .NET 개발자 컨퍼런스. 2019년부터 이어온 개발자들의 축제에 함께하세요.";
    
    var registrationEvents = Model.RegistrationEvents;
    var hasRegistrationEvents = registrationEvents.Any();
    var featuredSessions = Model.FeaturedSessions;
}

<!-- 히어로 섹션 - 심플한 CTA -->
<section class="hero-section d-flex align-items-center" style="background: linear-gradient(135deg, #512BD4 0%, #7B68EE 50%, #9370DB 100%); min-height: 100vh;">
    <div class="hero-overlay"></div>
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center text-white">
                <h1 class="display-1 fw-bold mb-4">
                    .NET Universe
                </h1>
                <p class="lead mb-5 opacity-90 fs-4">
                    <strong>국내 최대 .NET 개발자 컨퍼런스</strong><br />
                    AI와 오픈소스로 함께 성장하는 개발자들의 축제
                </p>
                
                @if (hasRegistrationEvents)
                {
                    <div class="d-flex flex-column gap-3 align-items-center">
                        @foreach (var eventData in registrationEvents)
                        {
                            var evt = eventData.Event;
                            <a href="@eventData.Url" class="btn btn-warning btn-lg px-5 py-3 fw-bold">
                                @if (evt.Status == DotNetUniverse.Models.EventStatus.Registration)
                                {
                                    <i class="bi bi-ticket-perforated-fill me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-megaphone-fill me-2"></i>
                                }
                                @evt.Title 바로가기
                            </a>
                        }
                    </div>
                }
                else
                {
                    <a asp-page="/Archive" class="btn btn-warning btn-lg px-5 py-3 fw-bold">
                        <i class="bi bi-clock-history me-2"></i>지난 행사 보기
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<!-- 추천 세션 영상 섹션 -->
@if (featuredSessions.Count > 0)
{
<section class="py-5 bg-light">
    <div class="container py-4">
        <div class="text-center mb-5">
            <span class="badge bg-purple text-white mb-3">Featured Sessions</span>
            <h2 class="fw-bold display-6 mb-3">지난 컨퍼런스 다시 보기</h2>
            <p class="text-muted">역대 .NET Universe 컨퍼런스의 인기 세션들을 만나보세요</p>
        </div>
        <div class="row g-4">
            @foreach (var (eventData, session) in featuredSessions)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="ratio ratio-16x9">
                            <iframe src="@session.YouTubeEmbedUrl" 
                                    title="@session.Title" 
                                    frameborder="0" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen
                                    loading="lazy"></iframe>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-purple me-2">@eventData.Event.Title</span>
                            </div>
                            <h5 class="card-title fw-bold mb-2">@session.Title</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-person me-1"></i>@session.PrimarySpeaker.Name
                                @if (!string.IsNullOrEmpty(session.PrimarySpeaker.Company))
                                {
                                    <span class="text-muted">(@session.PrimarySpeaker.Company)</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-page="/Archive" class="btn btn-outline-purple">
                <i class="bi bi-collection-play me-2"></i>더 많은 세션 보기
            </a>
        </div>
    </div>
</section>
}

<!-- 역대 후원사 섹션 -->
@if (Model.AllSponsors.Count > 0)
{
    var sponsorsPerPage = 6;
    var sponsorPages = Model.AllSponsors
        .Select((sponsor, index) => new { sponsor, index })
        .GroupBy(x => x.index / sponsorsPerPage)
        .Select(g => g.Select(x => x.sponsor).ToList())
        .ToList();
        
<section class="py-5">
    <div class="container py-4">
        <div class="text-center mb-5">
            <span class="badge bg-warning text-dark mb-3">Our Sponsors</span>
            <h2 class="fw-bold display-6 mb-3">역대 후원사</h2>
            <p class="text-muted">.NET Universe와 함께해 주신 소중한 후원사들입니다</p>
        </div>
        
        <div id="sponsorCarouselIndex" class="carousel slide sponsor-carousel" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-indicators">
                @for (int i = 0; i < sponsorPages.Count; i++)
                {
                    <button type="button" data-bs-target="#sponsorCarouselIndex" data-bs-slide-to="@i" 
                            class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" 
                            aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < sponsorPages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="sponsor-page">
                            @foreach (var sponsor in sponsorPages[i])
                            {
                                @if (!string.IsNullOrEmpty(sponsor.WebsiteUrl))
                                {
                                    <a href="@sponsor.WebsiteUrl" target="_blank" rel="noopener noreferrer" 
                                       class="sponsor-item text-decoration-none" title="@sponsor.Name">
                                        <img src="@sponsor.ResolvedLogoUrl" 
                                             alt="@sponsor.Name" 
                                             class="sponsor-logo-img"
                                             loading="lazy"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        <div class="sponsor-fallback" style="display: none;">
                                            <span class="fw-bold text-muted">@sponsor.Name</span>
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <div class="sponsor-item" title="@sponsor.Name">
                                        <img src="@sponsor.ResolvedLogoUrl" 
                                             alt="@sponsor.Name" 
                                             class="sponsor-logo-img"
                                             loading="lazy"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        <div class="sponsor-fallback" style="display: none;">
                                            <span class="fw-bold text-muted">@sponsor.Name</span>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
            @if (sponsorPages.Count > 1)
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#sponsorCarouselIndex" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#sponsorCarouselIndex" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            }
        </div>
        
        <div class="text-center mt-5">
            <a asp-page="/Sponsorship" class="btn btn-outline-purple">
                <i class="bi bi-heart me-2"></i>후원 안내 보기
            </a>
        </div>
    </div>
</section>
}
